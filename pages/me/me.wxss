/* 个人英雄卡 */
/* components/personCard/personCard.wxss */
.personCard-box{
  width:650rpx;
  height:500rpx;
  margin:20rpx auto;
  /* border:1rpx solid #dfdfdf; */
}

.top-content{
  width:100%;
  height:200rpx;
  display: flex;
  flex-wrap:wrap;
  align-items: center;
}

.avatar{
  width:120rpx;
  height:120rpx;
  margin:0 15rpx;
}

.avatar-img{
  width:120rpx;
  height:120rpx;
  border-radius:50%;
}

.person-intr{
  width:255rpx;
  height:150rpx;
  padding:0 10rpx;
  /* border: 1rpx solid black */
}

.nickname{
  display: flex;
  flex-wrap:wrap;
  align-items: center;
  margin-bottom: 10rpx;
  font-size: 30rpx;
}

.sex-img{
  width:30rpx;
  height:30rpx;
  margin-left: 10rpx;
}

.level-position{
  color:#727272;
  font-size: 24rpx;
  display: flex;
  flex-wrap:wrap;
  margin-bottom: 10rpx;
}

.position{
  margin-left: 80rpx;
}

.voice-intr{
  width:160rpx;
  height:50rpx;
  float: left;
}
.voice_length{
  float: left;
  margin-left: 20rpx;
  line-height: 60rpx;
}
.personCard-right{
  width:220rpx;
  height:150rpx;
  margin:0 10rpx;
   /* border: 1rpx solid black; */
}


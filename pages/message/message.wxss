/* 弹框设置 */

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}
.modal-dialog {
  width:650rpx;
  /* height: 300rpx; */
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  background: #f9f9f9;
  margin: -320rpx 40rpx;
}
.close_M{
  float: right;
  margin-top: 20rpx;
}
.close-img{
  width: 50rpx;
  height: 50rpx;
}
.modal_title{
  font-size: 24rpx;
  text-align: center;
  color: #b4b4b4;
  margin-top: 100rpx;
}


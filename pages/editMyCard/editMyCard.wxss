/* pages/editMyCard/editMyCard.wxss */
.editMyCard-box{
  width:650rpx;
  margin:20rpx auto;
  
}
.edit_title{
  text-align: center;
  font-size:20px;
  font-weight: 400;
  color:#909090;
  margin:20rpx;
}
.edit_intr{
  display: flex;
  flex-wrap:wrap;
  align-items: center;
}
.avatar{
  float: left;
  width:120rpx;
  height:120rpx;
  margin:0 15rpx;
}
.avatar-img{
  width:120rpx;
  height:120rpx;
  border-radius:50%;
}
.edit_name{
  float: left;
  width: 160rpx;
  height: 40rpx;
  text-align: center;
  font-size: 30rpx;
}
.edit_sex{
  width:60rpx;
  height:60rpx;
  margin-left: 10rpx;
}
.sele_edit{
  width: 100%;
  height: 60rpx;
  font-size: 24rpx;
  line-height: 60rpx;
  text-align: center;
  background: #E0E0E0;
  border-radius: 12rpx;
  margin:15rpx 0;
  white-space:nowrap;
  text-overflow:ellipsis;
  overflow:hidden;
}
.edit_bottom{
  margin-top:40rpx;
}
.edit_lab{
  font-size: 24rpx;
  margin: 20rpx 0;
  float: left;
}
.costom_lab{
  float: left;
  height: 60rpx;
  width: 400rpx;
  font-size: 24rpx;
  text-align: center;
  background: #E0E0E0;
  border-radius: 12rpx;
}
.btn_lab{
  float: right;
  width: 110rpx;
  height: 60rpx;
  background: #666;
  color: #FFFFFF;
  font-size: 23rpx;
  text-align: center;
}
.more_label{
  margin-top: 120rpx;
}
.f_hero_label{
  font-size: 24rpx;
  display: inline-block;
  margin:10rpx;
  padding:5rpx 20rpx;
  border:1rpx solid #E0E0E0;
  border-radius:50rpx;
}
.t_hero_label{
  font-size: 24rpx;
  display: inline-block;
  margin:10rpx;
  padding:5rpx 20rpx;
  border:1rpx solid #E0E0E0;
  border-radius:50rpx;
  background: #46A3FF;
  color: #FFFFFF;
}
.toEdit{
  width: 100%;
  margin: 10rpx 0;
}
.ad_popError{ background: #de352d; color: #fff; height: 58rpx; 
line-height: 58rpx; font-size: 24rpx; text-align: center; position: absolute; left: 0; top: 0; 
width: 100%; z-index:3;} 
.ad_popVoice{
  background: rgba(248,248,255,1); width: 90%;position: absolute; left: 5%; top: 20%; height:80%;z-index:4
}
.btn_close{
  background-color: #fc364f;
  width: 25rpx;
  height: 25rpx;
  border-radius: 50rpx;
  position: absolute;
  top: 5rpx;
  right: 5rpx;
}
.recording{
  /* border:1rpx solid; 
  background: green;
  border-radius: 90rpx; */
  width: 120rpx;
  height: 180rpx;
  position: absolute;
  bottom: 100rpx;
  left: 40%;
}
.listenVoice{
  width: 120rpx;
  height: 50rpx;
  position: absolute;
  top: 40%;
  left: 5%;
  font-size: 24rpx;
   line-height: 50rpx;
  background-color: #fc364f;
  border-radius: 20rpx;
  text-align: center;
  color: #fff;
}
.finishVoice{
  width: 120rpx;
  height: 50rpx;
  position: absolute;
  top: 40%;
  right: 5%;
  font-size: 24rpx;
  line-height: 50rpx;
  background-color: #fc364f;
  border-radius: 20rpx;
  text-align: center;
   color: #fff;
}

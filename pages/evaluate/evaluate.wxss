/* pages/acceptPage/acceptPage.wxss */
.evaluate-box{
  width:650rpx;
  margin:20rpx auto;
}
.eval_title{
  font-size: 24rpx;
  text-align: center;
  color: #b4b4b4;
  margin-top: 30rpx;
}
.eval_top{
  width: 380rpx;
  height: 260rpx;
  margin: 30rpx auto; 
}
.eval_topleft{
   float: left; 
  /* margin-left: 180rpx;   */
  width: 160rpx;
}
.avatar{
  width: 160rpx;
  height:120rpx;
  margin-bottom: 10rpx;
}
.avatar-img{
  width:120rpx;
  height:120rpx;
  border-radius:50%;
}
.eval_nickname{
  font-size: 24rpx;
  color: #4F4F4F;
  margin-top: 10rpx;
  margin-left: 15rpx;
}
.eval_topright{
  float: left;  
  margin-left: 20rpx;
  width:200rpx;
  color: #FF0000;
  font-size: 24rpx;
  padding-top: 10rpx;
}

/* 以下样式与edit页面一致 */
.eval_bottom{
  margin-top:60rpx auto;
  width: 100%;
}
.edit_lab{
  font-size: 24rpx;
  margin: 20rpx 0;
   float: left; 
}
.costom_lab{
   float: left; 
  height: 60rpx;
  width: 400rpx;
  font-size: 24rpx;
  text-align: center;
  background: #E0E0E0;
  border-radius: 12rpx;
}
.btn_lab{
   float: right; 
  width: 110rpx;
  height: 60rpx;
  background: #666;
  color: #FFFFFF;
  font-size: 23rpx;
  text-align: center;
}
.more_label{
  margin-top: 120rpx;
}
.f_hero_label{
  font-size: 24rpx;
  display: inline-block;
  margin:10rpx;
  padding:5rpx 20rpx;
  border-radius:50rpx;
}
.t_hero_label{
  font-size: 24rpx;
  display: inline-block;
  margin:10rpx;
  padding:5rpx 20rpx;
  border:1rpx solid #E0E0E0;
  border-radius:50rpx;
  background: #46A3FF;
  color: #FFFFFF;
}
.toEdit{
  width: 100%;
  margin: 100rpx 0;
}
.ad_popError{ background: #de352d; color: #fff; height: 58rpx; 
line-height: 58rpx; font-size: 24rpx; text-align: center; position: absolute; left: 0; top: 0; 
width: 100%; z-index:3;} 
@import "../comm/comm.wxss";

Page {
  background: rgb(45,49,50);
  color: #fff;
  font-size: 30rpx;
  width: 100%;
  height: 100%;
  overflow-x: hidden;
  overflow-y: auto;
}

.p_title{
    color:white;
}

.shake-box{
    margin:160rpx auto;
}

.shake-img{
    width:300rpx;
    height:300rpx;
}

.shake-choice{
    width:100%;
    position:relative;
    bottom:10%;
}

.choice{
    box-sizing: border-box;
    margin-top:80rpx;
}

.choice-sex{
    float:left;
    margin-left:100rpx;
}

.choice-driver{
    float:right;
    margin-right:100rpx;
}

.choice-img{
    width:100rpx;
    height:100rpx;
    margin:0 50rpx;
}

.choice-desc{
    text-align: center;
}